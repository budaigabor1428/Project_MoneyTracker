<h2>Edit <%= @tag.name %></h2>
<form method="POST" action="/money-tracker/tags/<%= @tag.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @tag.name %>"/>
    </div>

    <div class="form-el">
      <input type="submit" value="Edit"/>
    </div>

  </div>
</form>

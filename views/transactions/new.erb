<h2>New transaction</h2>
<form method="POST" action="/money-tracker/transactions">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="amount">Amount: Â£</label>
      <input type="number" name="amount" id="name" step ="0.01"/>
    </div>

    <div class="form-el">
  <label for="merchant_select">Select Merchant:</label>
  <select name="merchant_id" id="merchant_select">
    <% @merchants.each do |merchant| %>
        <option value=<%= merchant.id %>><%= merchant.name.capitalize %></option>
    <% end %>
  </select>
</div>

    <div class="form-el">
    <label for="tag_select">Select Tag:</label>
    <select name="tag_id" id="tag_select">
      <% @tags.each do |tag| %>
          <option value=<%= tag.id %>><%= tag.name.capitalize %></option>
      <% end %>
    </select>
  </div>

    <div class="form-el">
      <input type="submit" value="Add"/>
    </div>

  </div>
</form>

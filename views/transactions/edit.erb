<h2>Edit</h2>
<form method="POST" action="/money-tracker/transactions/<%= @transactions.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="amount">Amount:</label>
      <input type="text" name="amount" id="name" value="<%= @transactions.amount %>"/>
    </div>

    <div class="form-el">
     <label for="merchant_select">Select Merchant:</label>
     <select name="merchant_id" id="merchant_select" selected="<%= @transactions.merchant  %>">
       <% @merchants.each do |merchant| %>
         <% if merchant.id == @transactions.merchant %>
           <option value=<%= merchant.id %> selected><%= merchant.name.capitalize %></option>
         <% else %>
           <option value=<%= merchant.id %>><%= merchant.name.capitalize %></option>
         <% end %>
       <% end %>
     </select>
   </div>

   <div class="form-el">
    <label for="tag_select">Select Tag:</label>
    <select name="tag_id" id="tag_select" selected="<%= @transactions.tag  %>">
      <% @tags.each do |tag| %>
        <% if tag.id == @transactions.tag %>
          <option value=<%= tag.id %> selected><%= tag.name.capitalize %></option>
        <% else %>
          <option value=<%= tag.id %>><%= tag.name.capitalize %></option>
        <% end %>
      <% end %>
    </select>
  </div>

  <div class="form-el">
    <input type="submit" value="Edit"/>
  </div>

  </div>
</form>
